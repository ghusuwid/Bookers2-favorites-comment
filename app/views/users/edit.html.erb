<h2>User Infok</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorsが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputName" %>
  <%= f.submit "Update User" %>
<% end %>