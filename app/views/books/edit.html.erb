<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book do |f| %>
 <p>Title</p>
 <br>
 <%= f.text_field :title %>
 <br>
 <p>Opinion</p>
 <br>
 <%= f.text_field :body %>
 <br>
 <%= f.submit 'Update Book' %>

 <p><%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %></p>

<% end %>


